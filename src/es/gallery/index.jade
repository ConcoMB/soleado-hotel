doctype html
html(lang='es')
  head
    title Soleado Apart Hotel
    meta(charset="UTF-8")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    link(href='/css/vendor.css', rel='stylesheet')
    link(href='/css/all.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='/js/vendor/bootstrap.js')
    script(src='https://maps.googleapis.com/maps/api/js')
  body
    nav.navbar-center.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/')
            img(src='/assets/navbar_logo.svg', alt='alt text', style='border:none;')
        div
          ul.nav.navbar-nav
            li
              a.text.navbar-text(href='/#home')
                | Hotel
            li
              a.text.navbar-text(href='/#amenities')
                | Amenities
            li
              a.text.navbar-text(href='/#apartments')
                | Apartments
            li
              a.text.navbar-text(href='/#location')
                | Location
            li
              a.text.navbar-text(href='/contact')
                | Contact
    .gallery
      a(href='#' class= 'text prominent-text centered-text book-now-button')
        | book now
      a(href='/gallery' class= 'text prominent-text centered-text language')
        | en
      #gallery-carousel.gallery-img.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
          li.active(data-target='#gallery-carousel', data-slide-to='0')
          li(data-target='#gallery-carousel', data-slide-to='1')
          li(data-target='#gallery-carousel', data-slide-to='2')
          li(data-target='#gallery-carousel', data-slide-to='3')
